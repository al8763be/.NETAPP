@{
ViewData["Title"] = "Skapa ny fr친ga";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - STL Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        .body2 {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .navbar {
            position: absolute !important;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 0 20px !important;
        }

        .hero-image {
            background-image: url('@Url.Content("~/images/herobild.png")');            height: 50vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-text {
            text-align: center;
            color: white;
            max-width: 800px;
            padding: 20px;
        }

        .hero-text h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .hero-text h3 {
            font-size: 1.2rem;
            font-weight: 300;
        }

        .navbar-brand img {
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover img {
            transform: scale(1.1);
        }

        .btn_red.tillbaka {
            background: transparent;
            border: none;
            padding: 10px 0;
            margin-bottom: 30px;
        }

        .btn_red.tillbaka span.icon {
            background: url('@Url.Content("~/images/tillbaka.png")') no-repeat;
            float: left;
            width: 20px;
            height: 20px;
            background-size: contain;
        }

        .tillbaka a {
            text-decoration: none;
            color: black;
            font-size: 1rem;
            padding-left: 1rem;
        }

        .tillbaka a:hover {
            color: #095EA9;
            text-decoration: underline;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
        }
    </style>
</head>
<body class="body2">

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["SuccessMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    @TempData["ErrorMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

<header>
    <!-- Navbar som ligger ovanp친 hero-bilden -->
    <nav class="navbar navbar-light justify-content-between">
        <!-- Klickbar logga till v칛nster -->
        <a href="@Url.Action("Index", "Social")" class="navbar-brand">
            <img src="~/images/stl-loga.png" width="auto" height="50" alt="STL Logga">
        </a>

        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Profile" class="btn btn-outline-light btn-sm me-2">
                Min profil
            </a>
            <!-- Klickbar logga ut till h칬ger -->
            <a href="@Url.Action("Logout", "Home")" class="btn btn-danger btn-sm">Sign out</a>
        </div>
    </nav>

    <!-- Hero sektion med bakgrundsbild -->
    <div class="hero-image">
        <div class="hero-text">
            <h1>Skapa ny fr친ga</h1>
            <h3>Ut칬ka kunskapsbasen - din digitala v칛gvisare</h3>
