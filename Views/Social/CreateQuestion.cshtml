        <!-- Tillbaka knapp -->
        <div class="btn btn_red tillbaka">
            <span class="icon"></span>
            <a href="@Url.Action("Index", "Social")">tillbaka</a>
        </div>

        <!-- Create Question Form -->
        <form asp-controller="Social" asp-action="CreateQuestion" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <h4>Hj칛lp dig sj칛lv och andra!</h4>
                <p>Skapa en fr친ga s친 du underl칛ttar f칬r andra som st칬ter p친 samma problem.</p>
            </div>
            
            <div class="form-group mb-3">
                <label for="category" class="form-label">Kategori</label>
                <select class="form-control" id="category" name="category" required>
                    <option value="s칛ljfr친ga">S칛ljfr친ga</option>
                    <option value="driftfr친ga">Driftfr친ga</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="title" class="form-label">Fr친getitel</label>
                <input type="text"
                       class="form-control"
                       id="title"
                       name="title"
                       required
                       maxlength="200"
                       placeholder="Ange fr친getitel">
            </div>

            <div class="form-group mb-3">
                <label for="content" class="form-label">Fr친gedetaljer</label>
                <textarea class="form-control"
                          id="content"
                          name="content"
                          rows="5"
                          required
                          placeholder="Beskriv din fr친ga h칛r..."></textarea>
            </div>

            <div class="form-group mb-3">
                <label for="attachment" class="form-label">游늹 Bilaga (valfritt)</label>
                <input type="file"
                       class="form-control"
                       id="attachment"
                       name="attachment"
                       accept=".pdf,.doc,.docx,.png,.jpg,.jpeg">
                <small class="form-text text-muted">Max 5MB. PDF, Word-dokument eller bilder till친ts.</small>
            </div>

            <button type="submit" class="btn btn-primary">Skapa fr친ga</button>
        </form>
    </div>
</main>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
