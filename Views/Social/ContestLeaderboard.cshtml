@model WebApplication2.Models.ContestLeaderboardViewModel
@{
    ViewData["Title"] = "Contest Leaderboard";
}

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - STL Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="bg-light">
<header>
    <nav class="navbar navbar-light bg-white border-bottom px-3">
        <a href="@Url.Action("Index", "Social")" class="navbar-brand">
            <img src="~/images/stl-loga.png" width="auto" height="40" alt="STL Logga">
        </a>
        <div class="d-flex align-items-center">
            @if (User.IsInRole("SuperAdmin"))
            {
                <a asp-controller="Social" asp-action="HubSpotOwnerMappings" class="btn btn-outline-primary btn-sm me-2">
                    HubSpot Owners
                </a>
            }
            <a asp-controller="Home" asp-action="Profile" class="btn btn-outline-primary btn-sm me-2">
                Min profil
            </a>
            <a href="@Url.Action("Logout", "Home")" class="navbar-brand">
                <img src="~/images/loggaut.png" width="auto" height="36" alt="Logga ut">
            </a>
        </div>
    </nav>
</header>

<main class="container my-4">
    <div class="mb-3">
        <a asp-controller="Social" asp-action="Index" class="btn btn-link text-decoration-none p-0">‚Üê Tillbaka</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="mb-1">@Html.Raw(Model.Contest.Name)</h2>
            @if (!string.IsNullOrWhiteSpace(Model.Contest.Description))
            {
                <p class="text-muted mb-2">@Html.Raw(Model.Contest.Description)</p>
            }
            <small class="text-muted">
                @Model.Contest.StartDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("sv-SE"))
                -
                @Model.Contest.EndDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("sv-SE"))
            </small>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @{
                var latestUpdated = Model.Entries.Any()
                    ? Model.Entries.Max(e => e.UpdatedDate)
                    : (DateTime?)null;
            }
            <h4 class="mb-3 d-flex justify-content-between align-items-center">
                <span>Full leaderboard</span>
                @if (latestUpdated.HasValue)
                {
                    <small class="text-muted">Uppdaterad: @latestUpdated.Value.ToString("yyyy-MM-dd HH:mm")</small>
                }
            </h4>
            @if (Model.Entries.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Anv√§ndare</th>
                            <th>Aff√§rer</th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (var i = 0; i < Model.Entries.Count; i++)
                        {
                            var entry = Model.Entries[i];
                            var rank = i + 1;
                            <tr>
                                <td>@rank</td>
                                <td>
                                    @if (rank == 1)
                                    {
                                        <span>ü•á</span>
                                    }
                                    else if (rank == 2)
                                    {
                                        <span>ü•à</span>
                                    }
                                    else if (rank == 3)
                                    {
                                        <span>ü•â</span>
                                    }
                                    @entry.EmployeeNumber
                                </td>
                                <td><span class="badge bg-primary">@entry.DealsCount</span></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Inga registrerade aff√§rer inom t√§vlingens period √§nnu.</p>
            }
        </div>
    </div>
</main>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
